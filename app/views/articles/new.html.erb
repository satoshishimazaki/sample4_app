<% provide(:title, 'post') %>
<h1>投稿</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :herenowtitle %>
      <%= f.select :herenowtitle, ['旬', 'お得'], { include_blank: '選択してください' }, class: 'herenow' %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :image %>
      <%= f.file_field :image %>

      <%= f.submit "Post my acrticle", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>