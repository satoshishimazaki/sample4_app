<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@store) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.fields_for :segment do |f_segment| %>
          <%= f_segment.label :'業態' %>
          <%= f_segment.text_field :name %>
      <% end %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :tell %>
      <%= f.text_field :tell %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>